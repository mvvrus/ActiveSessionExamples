@page
@model SampleApplication.Pages.TimeSeriesParamsModel
@{
    Layout = "_Layout";
    ViewData["Title"]="Enter parameters";
}

<div>
    <h2 style="text-align:center">Enter parameters for running time-series runner example.</h2>
    <form asp-page="/TimeSeriesParams" style="padding-left:10px; width:max-content">
        <div><label asp-for="Interval" style="font-weight:600"></label>: <input asp-for="Interval" style="width:3em" /> <span style="color:red" asp-validation-for="Interval"></span> </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>
